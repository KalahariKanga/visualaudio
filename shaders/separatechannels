uniform float separation;
uniform float angle;

void main()
{
	vec2 texcoord = vec2(gl_TexCoord[0]);
	vec2 pixeldelta = textureSize(texture, 0);
	float dx = float(int(separation)) / float(pixeldelta.x);
	float dy = float(int(separation)) / float(pixeldelta.y);

	mat2 rot;
	rot[0] = vec2(cos(angle),sin(angle));
	rot[1] = vec2(-sin(angle),cos(angle));

	vec4 col = texture2D(texture, texcoord);
	col.r = texture2D(texture, texcoord - rot*(vec2(dx, dy))).r;
	col.b = texture2D(texture, texcoord + rot*(vec2(dx, dy))).b;

	gl_FragColor = col;
}
